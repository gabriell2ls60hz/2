/* FPS COUNTER ADICIONADO*/
/* ===================== */
(function () {
    const fpsBox = document.createElement("div");
    fpsBox.style.cssText = `
        position:fixed;
        top:10px;
        right:10px;
        background:#000;
        color:#14bf96;
        padding:5px 10px;
        border-radius:10px;
        font-family:Arial, sans-serif;
        font-size:14px;
        font-weight:bold;
        z-index:999999;
    `;
    fpsBox.innerText = "0";
    document.body.appendChild(fpsBox);

    let lastFrame = performance.now();
    let frames = 0;
    let fps = 0;

    function loop(now) {
        frames++;
        if (now - lastFrame >= 1000) {
            fps = frames;
            frames = 0;
            lastFrame = now;
            fpsBox.innerText = fps;
        }
        requestAnimationFrame(loop);
    }
    requestAnimationFrame(loop);
})();
